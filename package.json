        "@eslint/js": "^9.37.0",
        "@types/node": "^24.7.2",
        "audit-ci": "^7.1.0",
        "esbuild": "^0.25.10",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-jsdoc": "^61.1.0",
        "eslint-plugin-prettier": "^5.5.4",
        "jest": "^30.2.0",
        "jsdoc-to-markdown": "^9.1.3",
        "knip": "^5.64.3",
        "license-checker-rseidelsohn": "^4.4.2",
        "lockfile-lint": "^4.14.1",
        "npm-check-updates": "^19.0.0",
        "prettier": "^3.6.2",
        "snyk": "^1.1300.0",
        "typescript": "^5.9.3"
    }
}
