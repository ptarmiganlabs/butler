        "cron-job-manager": "^2.3.1",
        "email-validator": "^2.0.4",
        "enigma.js": "^2.14.0",
        "express-handlebars": "^8.0.3",
        "fastify": "^5.6.1",
        "fastify-healthcheck": "^5.1.0",
        "fastify-plugin": "^5.1.0",
        "fs-extra": "^11.3.2",
        "handlebars": "^4.7.8",
        "http-errors": "^2.0.0",
        "i": "^0.3.7",
